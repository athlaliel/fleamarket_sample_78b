.Wrapper
  = render 'form/header'

  .c-content
    .c-content__title
      %h2 クレジットカード情報入力


      
    .c-content__credit-card
      .c-content__credit-card__inner.marginT25
        = form_with url: cards_path, method: :post, html: { name: "inputForm" }, class:"essential" do |f|
          %span.label
            カード番号
          %span.need
            必須
          = f.text_field :card_number, type: 'text', class: 'input-number', placeholder: '半角数字のみ', maxlength: "16"
          %ul.card-list
            %li.card-list__icon
              = image_tag "card/visa.svg", height: "20", width: "34"
            %li.card-list__icon
              = image_tag "card/master-card.svg", height: "20", width: "34"
            %li.card-list__icon
              = image_tag "card/saison-card.svg", height: "20", width: "30"
            %li.card-list__icon
              = image_tag "card/jcb.svg?1242113482", height: "20", width: "32"
            %li.card-list__icon
              = image_tag "card/american_express.svg", height: "20", width: "21"
            %li.card-list__icon
              = image_tag "card/dinersclub.svg", height: "20", width: "32"
            %li.card-list__icon
              = image_tag "card/discover.svg", height: "20", width: "32"


          .cards-expire
            = f.label :有効期限, class: 'label'
            %span.need
              必須
            %br
            .cards-expire__wrap
              .cards-expire__wrap__item.marginT25
                = f.select :exp_month, [["01",1],["02",2],["03",3],["04",4],["05",5],["06",6],["07",7],["08",8],["09",9],["10",10],["11",11],["12",12]],{} , class: 'month'
                %span.expire-text
                  月
                = icon("fas", "angle-down",class:"form__field--inputSelectManth")

              .cards-expire__wrap__item.marginT25
                = f.select :exp_year, [["19",2019],["20",2020],["21",2021],["22",2022],["23",2023],["24",2024],["25",2025],["26",2026],["27",2027],["28",2028],["29",2029]],{} , class: 'year'
                %span.expire-text
                
                  年
                = icon("fas", "angle-down",class:"form__field--inputSelectYear")


          .cards-expire
            = f.label :セキュリティコード, class: 'label'
            %span.need
              必須
            = f.text_field :cvc, type: 'text', class: 'input-number', placeholder: 'カード背面4桁もしくは3桁の番号', maxlength: "4"

          .c-content-bottom#card_token
            = f.submit '登録する', class: 'c-content-bottom__add-btn', id: 'token_submit'

  = render 'form/footer'