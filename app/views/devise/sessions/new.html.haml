.Wrapper
  = render 'form/header'

  .field
    .field_box
      %h2.field_box__text
        ログイン
    %hr.formCutter

    .loginform
      = form_for(resource, as: resource_name, url: session_path(resource_name)) do |f|

        .field__boxColumn
          %span メールアドレス
          %br/
          .field__boxColumn__input__marginT25
            = f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "アドレスを入力してください", class: "field__boxColumn__text"
        .field__boxColumn
          %span パスワード
          %br/
          .field__boxColumn__input__marginT25
            = f.password_field :password, autocomplete: "current-password", placeholder: "パスワードを入力してください", class: "field__boxColumn__text"

        - if devise_mapping.rememberable?
          .field__remember
            = f.check_box :remember_me, class: "field__remember__btn"
            = f.label :remember_me, class: "field__remembe__btn"

        .field__boxColumn
          .field__boxColumnNext
            = f.submit value:"ログイン", class: "field__boxColumnNext__btn"
    .field__footer
      = link_to "パスワードを忘れた方はこちら", new_password_path(resource_name), class: "field__footer__text"


  = render 'form/footer'