.h2 住所情報登録

= form_for @sendaddress do |f|
  = render "devise/shared/error_messages", resource: @sendaddress

  .field
    = f.label :s_firstname
    %br
    = f.text_field :s_firstname

  .field
    = f.label :s_lastname
    %br
    = f.text_field :s_lastname

  .field
    = f.label :s_h_firstname
    %br
    = f.text_field :s_h_firstname

  .field
    = f.label :s_h_lastname
    %br
    = f.text_field :s_h_lastname

  .field
    = f.label :zipcode
    %br
    = f.text_field :zipcode

  .field
    = f.label :prefectures
    %br
    -# = f.text_field :prefectures
    -# = f.input :prefecture_code, collection: JpPrefecture::Prefecture.all, :value_method => :name, include_blank: '都道府県'
    = f.collection_select :prefectures, JpPrefecture::Prefecture.all, :code, :name, {prompt: "都道府県"} , {class: "form__field--inputSelect"}


  .field
    = f.label :municipalitities
    %br
    = f.text_field :municipalitities

  .field
    = f.label :streetaddress
    %br
    = f.text_field :streetaddress

  .field
    = f.label :room
    %br
    = f.text_field :room

  .field
    = f.label :phonenumber
    %br
    = f.text_field :phonenumber

  .actions
    = f.submit "Sign up"

= render "devise/shared/links"