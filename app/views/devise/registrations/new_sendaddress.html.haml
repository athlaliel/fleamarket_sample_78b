.sellHeader
  = link_to "/", class: "sellHeader__link" do
    = image_tag '/assets/logo.png' ,alt: "FURIMA" , class: "sellHeader__icon"

.field
  .field_box
    %h2.field_box__text
      住所情報登録
  .formzone
    = form_for @sendaddress  do |f|
      = render "devise/shared/error_messages", resource: resource

      .field__boxColumn
        = f.label :s_firstname
        %span.field__boxColumn__essential
          必須
        %br
        .field__boxColumn__input__marginT25
          = f.text_field :s_firstname, autofocus: true, autocomplete: "s_firstname" , placeholder: "苗字を入力してください", class: "field__boxColumn__text"

      .field__boxColumn
        = f.label :s_lastname
        %span.field__boxColumn__essential
          必須
        %br
        .field__boxColumn__input__marginT25
          = f.text_field :s_lastname, autofocus: true, autocomplete: "s_lastname" , placeholder: "名前を入力してください", class: "field__boxColumn__text"

      .field__boxColumn
        = f.label :s_h_firstname
        %span.field__boxColumn__essential
          必須
        %br
        .field__boxColumn__input__marginT25
          = f.text_field :s_h_firstname, autofocus: true, autocomplete: "s_h_firstname" , placeholder: "フリガナ(苗字)を入力してください", class: "field__boxColumn__text"

      .field__boxColumn
        = f.label :s_h_lastname
        %span.field__boxColumn__essential
          必須
        %br
        .field__boxColumn__input__marginT25
          = f.text_field :s_h_lastname, autofocus: true, autocomplete: "s_lastname" , placeholder: "フリガナ(名前)を入力してください", class: "field__boxColumn__text"

      .field__boxColumn
        = f.label :zipcode
        %span.field__boxColumn__essential
          必須
        %br
        .field__boxColumn__input__marginT25
          = f.text_field :zipcode, autocomplete: 'zipcode', class: 'field__boxColumn__text', autofocus: true, autocomplete: "zipcode" , placeholder: "郵便番号を入力してください", pattern: '\d{7}' ,maxlength: "7"

      .field__boxColumn
        = f.label :prefectures
        %span.field__boxColumn__essential
          必須
        %br
        .field__boxColumn__input__marginT25
          = f.collection_select :prefectures, JpPrefecture::Prefecture.all, :code, :name, {prompt: "---都道府県を選択してください"} , {class: "field__boxColumn__text"}

      .field__boxColumn
        = f.label :municipalitities
        %span.field__boxColumn__essential
          必須
        %br
        .field__boxColumn__input__marginT25
          = f.text_field :municipalitities, autocomplete: 'municipalitities', class: "field__boxColumn__text", placeholder: "市町村を入力してください"

      .field__boxColumn
        = f.label :streetaddress
        %span.field__boxColumn__essential
          必須
        %br
        .field__boxColumn__input__marginT25
          = f.text_field :streetaddress, autocomplete: 'streetaddress', class: "field__boxColumn__text", placeholder: "住所を入力してください"

      .field__boxColumn
        = f.label :room
        %span.field__boxColumn__essential
          任意
        %br
        .field__boxColumn__input__marginT25
          = f.text_field :room, autocomplete: "room" , placeholder: "(任意)部屋番号を入力してください", class: "field__boxColumn__text"

      .field__boxColumn
        = f.label :phonenumber
        %span.field__boxColumn__essential
          任意
        %br
        .field__boxColumn__input__marginT25
          = f.text_field :phonenumber, autofocus: true, autocomplete: "phonenumber" , placeholder: "(任意)電話番号を入力してください", class: "field__boxColumn__text"

      .field__boxColumn
        .field__boxColumnNext
        = f.submit value:"Sign up", class: "field__boxColumnNext__btn"

= javascript_include_tag 'application'


